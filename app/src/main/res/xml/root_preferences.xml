<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="ubuntux"
        app:title="@string/ubuntux_preferences_title"
        app:summary="@string/ubuntux_preferences_summary"
        app:fragment="com.ubuntux.app.fragments.settings.UbuntuxPreferencesFragment"/>

    <Preference
        app:key="ubuntux_api"
        app:title="@string/ubuntux_api_preferences_title"
        app:summary="@string/ubuntux_api_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.ubuntux.app.fragments.settings.UbuntuxAPIPreferencesFragment"/>

    <Preference
        app:key="ubuntux_float"
        app:title="@string/ubuntux_float_preferences_title"
        app:summary="@string/ubuntux_float_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.ubuntux.app.fragments.settings.UbuntuxFloatPreferencesFragment"/>

    <Preference
        app:key="ubuntux_tasker"
        app:title="@string/ubuntux_tasker_preferences_title"
        app:summary="@string/ubuntux_tasker_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.ubuntux.app.fragments.settings.UbuntuxTaskerPreferencesFragment"/>

    <Preference
        app:key="ubuntux_widget"
        app:title="@string/ubuntux_widget_preferences_title"
        app:summary="@string/ubuntux_widget_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.ubuntux.app.fragments.settings.UbuntuxWidgetPreferencesFragment"/>

    <Preference
        app:key="about"
        app:title="@string/about_preference_title"
        app:persistent="false"/>
    <!-- app:layout="@layout/preference_markdown_text" -->

    <Preference
        app:key="donate"
        app:title="@string/donate_preference_title"
        app:persistent="false"
        app:isPreferenceVisible="false"/>

</PreferenceScreen>
